<beans:beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://camel.apache.org/schema/spring" 
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:vs2="http://www.vedaxml.com/services/xmlchannel/vsa/v2"
	xsi:schemaLocation="
    	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       	http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring-2.11.0.xsd">

	<!-- <beans:bean id="stringToDbObject" class="com.veda.icc.esb.utilities.dumper.camel.mongo.StringToDbObject"/> -->

	<camelContext id="hackathon-2" useMDCLogging="true" trace="true" streamCache="true" autoStartup="true" useBreadcrumb="true">

		<endpoint id="product-request-handler" uri="direct:start" />
		<endpoint id="product-request-handler-http" uri="jetty:http://0.0.0.0:8080/hackathon/services/submit" />
		<endpoint id="product-orchestrator" uri="direct:product-orchestrator" />

		<endpoint id="vsa-orchestrator" uri="direct:vsa-orchestrator" />
		<endpoint id="vsa-request-dumper" uri="jms:vsa-request-dumper" />
		<endpoint id="vsa-response-dumper" uri="jms:vsa-response-dumper" />
		<endpoint id="vsa-product" uri="direct:vsa-product" />
		
		<endpoint id="dumper-request-handler" uri="jms:dumper-request-handler" />
		<endpoint id="dumper-orchestrator" uri="jms:dumper-orchestrator" />
		
		<dataFormats>
			<xmljson id="xmljson" />
		</dataFormats>
		
		<route id="product-request-handler-http" streamCache="true" >
			<from ref="product-request-handler-http"/>
			<to ref="product-orchestrator" />
		</route>
		
		<route id="product-request-handler">
			<from ref="product-request-handler"/>
			<to ref="product-orchestrator" />
		</route>
		
		<route id="product-orchestrator">
			<from ref="product-orchestrator" />
			<log message="product request: ${body}" loggingLevel="DEBUG"/>
			<to ref="vsa-orchestrator"/>
			<!-- <to ref="bureau-orchestrator"/>
			<to ref="agd-orchestrator"/> -->
		</route>
		
		<route id="vsa-orchestrator">
			<from ref="vsa-orchestrator" />
			<setHeader headerName="timestamp"><simple>date:now:yyyy-MM-dd'T'HH:mm:ss</simple></setHeader>
			<setBody><simple>resource:classpath:/payloads/vsa/enquiry/request_fn_13093500.xml</simple></setBody>
			<log message="vsa request: ${body}" loggingLevel="DEBUG"/>
			<!-- <wireTap ref="vsa-request-dumper"/> -->
			<to ref="vsa-product"/>
			<wireTap ref="vsa-response-dumper"/>
		</route>
		
		<route id="vsa-request-dumper">
			<from ref="vsa-request-dumper" />
			<log message="vsa request dumper: ${body}" loggingLevel="DEBUG"/>
			<to uri="xslt:transformation/vsa/request-dumper.xsl"/>
			<to ref="dumper-request-handler"/>
		</route>
		
		<route id="vsa-product">
			<from ref="vsa-product" />
			<setBody><simple>resource:classpath:/payloads/vsa/enquiry/response_fn_13093500.xml</simple></setBody>
			<log message="vsa product response: ${body}" loggingLevel="DEBUG"/>
		</route>
		
		<route id="vsa-response-dumper">
			<from ref="vsa-response-dumper" />
			<log message="vsa response: ${body}" loggingLevel="DEBUG"/>
			<to uri="xslt:transformation/vsa/response-dumper.xsl"/>
			<to ref="dumper-request-handler"/>
		</route>

		<route id="dumper-request-handler">
			<from ref="dumper-request-handler" />
			<log message="dumper payload: ${body}" loggingLevel="INFO"/>
			<setHeader headerName="CamelMongoDbCollection"><xpath resultType="String">/request/collection/text()</xpath></setHeader>
			<split>
				<xpath>/request/parts/*</xpath>
				<to ref="dumper-orchestrator"/>
			</split>
		</route>
		
		<route id="dumper-orchestrator">
			<from ref="dumper-orchestrator" />
			<log message="xml part: ${body}" loggingLevel="INFO"/>
			<marshal ref="xmljson"/>
			<log message="json: ${body}" />
			<log message="saving payload to collection: ${headers.CamelMongoDbCollection}"/>
			<convertBodyTo type="java.lang.String"/>
			<!-- <convertBodyTo type="com.mongodb.DBObject"/>
			<process ref="stringToDbObject"/> -->
			<to uri="mongodb:myDb?database=test&amp;collection=books&amp;operation=save&amp;dynamicity=true" />
		</route>

	</camelContext>

</beans:beans>